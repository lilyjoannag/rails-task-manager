<h1>Tasks Index</h1>
<ul>
 <% @tasks.each do |task| %>
   <li>
     <%= link_to task.title, task_path(task) %>
     <input type="checkbox" <%= task.completed ? "checked" : "" %>>
      <%= link_to task_path(task),
        method: :delete,
        data: { confirm: "Are you sure?" } do  %>
        <i class="fa fa-trash"></i>
      <% end %>
     <br>
   </li>
 <% end %>
</ul>
<%= link_to "Add a new task", newtask_path %>
